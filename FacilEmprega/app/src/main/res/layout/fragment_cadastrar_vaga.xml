<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:fillViewport="true"
    tools:context=".ui.empresa.CadastrarVagaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Cadastre uma vaga de emprego"
            android:textColor="@color/text_light"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_text_nome_empresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/text_light"
            android:hint="Nome da empresa"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="@color/text_light"
            android:textColorHint="@color/text_hint" />

        <EditText
            android:id="@+id/edit_text_nome_cargo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/text_light"
            android:hint="Nome do cargo"
            android:inputType="textCapWords"
            android:minHeight="48dp"
            android:textColor="@color/text_light"
            android:textColorHint="@color/text_hint" />

        <EditText
            android:id="@+id/edit_text_descricao_vaga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/text_light"
            android:hint="Descrição da vaga"
            android:inputType="textMultiLine"
            android:minHeight="48dp"
            android:textColor="@color/text_light"
            android:textColorHint="@color/text_hint" />

        <EditText
            android:id="@+id/edit_text_localizacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/text_light"
            android:hint="Localização"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="@color/text_light"
            android:textColorHint="@color/text_hint" />

        <EditText
            android:id="@+id/edit_text_salario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/text_light"
            android:hint="Salário Oferecido"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:textColor="@color/text_light"
            android:textColorHint="@color/text_hint" />

        <EditText
            android:id="@+id/edit_text_link_vaga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/text_light"
            android:hint="Link para a vaga"
            android:inputType="textUri"
            android:minHeight="48dp"
            android:textColor="@color/text_light"
            android:textColorHint="@color/text_hint" />

        <Button
            android:id="@+id/button_cadastrar_vaga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_dark"
            android:text="Cadastrar"
            android:textColor="@color/text_light" />

    </LinearLayout>
</ScrollView>