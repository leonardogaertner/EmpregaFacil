<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.facilemprega.ui.home.HomeFragment"
        android:label="@string/title_ofertas"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_cadastrarVagaFragment"
            app:destination="@id/cadastrarVagaFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_vagas_salvas"
        android:name="com.example.facilemprega.ui.vagas_salvas.VagasSalvasFragment"
        android:label="Vagas de Interesse"
        tools:layout="@layout/fragment_vagas_salvas" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.facilemprega.ui.profile.ProfileFragment"
        android:label="Meu Perfil"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/cadastrarVagaFragment"
        android:name="com.example.facilemprega.ui.empresa.CadastrarVagaFragment"
        android:label="Cadastrar uma vaga de emprego"
        tools:layout="@layout/fragment_cadastrar_vaga" />

</navigation>